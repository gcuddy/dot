#!/usr/bin/env bash
# JankyBorders config - generated by theme system
# Theme: Catppuccin Macchiato

hex_to_argb() { echo "${1/#\#/0xff}"; }

options=(
  style=round
  width=6
  active_color="glow($(hex_to_argb '#8aadf4'))"
  inactive_color=$(hex_to_argb '#494d64')
  hidpi=on
)

borders "${options[@]}"
