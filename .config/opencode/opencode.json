{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "permission": {
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.envrc": "deny",
      "secrets/*": "deny",
      ".dev.vars": "ask"
    },
    "external_directory": {
      "*": "ask",
      "/Users/gus/Development/**": "allow",
      "/Users/gus/.config/opencode/**": "allow",
      "/Users/gus/.config/**": "allow"
    },
    "bash": {
      "*": "ask",
      "ast-grep *": "allow",
      "awk *": "allow",
      "biome *": "allow",
      "bun *": "allow",
      "cargo *": "allow",
      "cat *": "allow",
      "cloc *": "allow",
      "cp *": "allow",
      "date *": "allow",
      "diff *": "allow",
      "docker *": "allow",
      "echo *": "allow",
      "fd *": "allow",
      "find *": "allow",
      "fnm *": "allow",
      "fzf *": "allow",
      "git *": "allow",
      "git push *": "ask",
      "git push": "ask",
      "go *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "jj *": "allow",
      "jj git push *": "ask",
      "jj git push": "ask",
      "jj gp *": "ask",
      "jj gp": "ask",
      "jq *": "allow",
      "ls *": "allow",
      "make *": "allow",
      "mkdir *": "allow",
      "npm *": "allow",
      "playwriter *": "allow",
      "pnpm *": "allow",
      "prettier *": "allow",
      "ps *": "allow",
      "pwd": "allow",
      "rg *": "allow",
      "sed *": "allow",
      "sleep *": "allow",
      "sg *": "allow",
      "shellcheck *": "allow",
      "sort *": "allow",
      "tail *": "allow",
      "tar *": "allow",
      "touch *": "allow",
      "tr *": "allow",
      "tree *": "allow",
      "tsc *": "allow",
      "turbo *": "allow",
      "uptime *": "allow",
      "uniq *": "allow",
      "unzip *": "allow",
      "vite *": "allow",
      "vitest *": "allow",
      "vm_stat *": "allow",
      "wc *": "allow",
      "which *": "allow",
      "xargs *": "allow",
      "yarn *": "allow",
      "zip *": "allow"
    },
    "edit": "allow",
    "webfetch": "ask"
  },
  "theme": "system",
  "keybinds": {
    "leader": "ctrl+o",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "input_delete_to_line_start": "none",
    "input_delete": "delete,shift+delete"
  },
  "plugin": [
    "opencode-anthropic-auth@latest",
    "@mohak34/opencode-notifier@latest"
  ],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "opensrc": {
      "type": "local",
      "command": ["npx", "-y", "opensrc-mcp"],
      "enabled": true
    },
    "overseer": {
      "type": "local",
      "command": ["os", "mcp"],
      "enabled": true
    }
  }
}
