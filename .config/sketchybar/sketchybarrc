#!/bin/bash
# SketchyBar config - Omarchy-style layout
# Layout: [logo] [spaces] ... [clock] ... [wifi] [volume] [battery] [cpu]

CONFIG_DIR="$HOME/.config/sketchybar"
PLUGIN_DIR="$CONFIG_DIR/plugins"
ITEM_DIR="$CONFIG_DIR/items"

source "$CONFIG_DIR/colors.sh"

##### Bar Appearance #####
sketchybar --bar \
    position=top \
    height=28 \
    blur_radius=30 \
    color=$BAR_COLOR \
    border_width=0 \
    margin=0 \
    y_offset=0 \
    corner_radius=0 \
    padding_left=8 \
    padding_right=8 \
    topmost=off \
    sticky=on \
    font_smoothing=on \
    notch_width=0

##### Default Item Appearance #####
sketchybar --default \
    icon.font="JetBrainsMono Nerd Font:Bold:14.0" \
    icon.color=$FOREGROUND \
    icon.padding_left=6 \
    icon.padding_right=4 \
    label.font="JetBrainsMono Nerd Font:Regular:12.0" \
    label.color=$FOREGROUND \
    label.padding_left=4 \
    label.padding_right=6 \
    background.color=$ITEM_BG_COLOR \
    background.corner_radius=4 \
    background.height=22 \
    background.padding_left=2 \
    background.padding_right=2

##### Left Items #####

# Logo (like Omarchy's custom/omarchy)
sketchybar --add item logo left \
    --set logo \
        icon="" \
        icon.font="JetBrainsMono Nerd Font:Bold:16.0" \
        icon.color=$ACCENT_COLOR \
        icon.padding_left=4 \
        icon.padding_right=10 \
        label.drawing=off \
        click_script="open -a 'System Settings'"

# Aerospace workspace indicator (shows current workspace only)
sketchybar --add item aerospace_workspace left \
    --set aerospace_workspace \
        icon="" \
        icon.font="JetBrainsMono Nerd Font:Bold:12.0" \
        icon.color=$ACCENT_COLOR \
        icon.padding_left=0 \
        icon.padding_right=4 \
        label.font="JetBrainsMono Nerd Font:Bold:12.0" \
        label.color=$FOREGROUND \
        label.padding_left=0 \
        label.padding_right=8 \
        background.drawing=off \
        script="$PLUGIN_DIR/aerospace.sh" \
        update_freq=0 \
    --subscribe aerospace_workspace aerospace_workspace_change

# Separator

sketchybar --add item front_app left \
    --set front_app \
        icon.drawing=off \
        label.font="JetBrainsMono Nerd Font:Regular:12.0" \
        label.color=$FOREGROUND \
        script="$PLUGIN_DIR/front_app.sh" \
    --subscribe front_app front_app_switched

##### Center Items #####

# Clock (like Omarchy's clock format)
sketchybar --add item clock center \
    --set clock \
        icon.drawing=off \
        label.font="JetBrainsMono Nerd Font:Regular:12.0" \
        label.color=$FOREGROUND \
        update_freq=30 \
        script="$PLUGIN_DIR/clock.sh" \
        click_script="$PLUGIN_DIR/clock.sh toggle"

# Media (now playing)
sketchybar --add item media center \
    --set media \
        icon.font="JetBrainsMono Nerd Font:Bold:14.0" \
        label.font="JetBrainsMono Nerd Font:Regular:11.0" \
        label.max_chars=45 \
        update_freq=5 \
        script="$PLUGIN_DIR/media.sh" \
        click_script="osascript -e 'tell application \"System Events\" to keystroke space using {command down}'" \
    --subscribe media media_change

##### Right Items #####

# CPU (like Omarchy's cpu)
sketchybar --add item cpu right \
    --set cpu \
        icon="ó°›" \
        icon.color=$FOREGROUND_DIM \
        label.drawing=off \
        update_freq=5 \
        script="$PLUGIN_DIR/cpu.sh" \
        click_script="open -a 'Activity Monitor'"

# Battery (like Omarchy's battery)
sketchybar --add item battery right \
    --set battery \
        icon.font="JetBrainsMono Nerd Font:Bold:14.0" \
        label.drawing=off \
        update_freq=60 \
        script="$PLUGIN_DIR/battery.sh" \
    --subscribe battery system_woke power_source_change

# Volume (like Omarchy's pulseaudio)
sketchybar --add item volume right \
    --set volume \
        icon.font="JetBrainsMono Nerd Font:Bold:14.0" \
        label.drawing=off \
        script="$PLUGIN_DIR/volume.sh" \
    --subscribe volume volume_change

# Wifi (like Omarchy's network)
sketchybar --add item wifi right \
    --set wifi \
        icon.font="JetBrainsMono Nerd Font:Bold:14.0" \
        label.drawing=off \
        update_freq=5 \
        script="$PLUGIN_DIR/wifi.sh" \
        click_script="open 'x-apple.systempreferences:com.apple.preference.network'"

# Bluetooth (like Omarchy's bluetooth)
sketchybar --add item bluetooth right \
    --set bluetooth \
        icon.font="JetBrainsMono Nerd Font:Bold:14.0" \
        label.drawing=off \
        update_freq=10 \
        script="$PLUGIN_DIR/bluetooth.sh" \
        click_script="open 'x-apple.systempreferences:com.apple.BluetoothSettings'"

##### Events #####
# Register aerospace workspace change event
sketchybar --add event aerospace_workspace_change

##### Finalize #####
sketchybar --update

# Trigger initial aerospace workspace state
sleep 0.5
FOCUSED=$(aerospace list-workspaces --focused 2>/dev/null)
if [[ -n "$FOCUSED" ]]; then
    sketchybar --trigger aerospace_workspace_change FOCUSED="$FOCUSED" PREV=""
fi
